<h4> <%= @quiz.name %> </h4>



<% @quiz.users.each_with_index do |stu, i| %>

  <%= i+1 %> <%= stu.name %> 
    <% if stu.results.where(:quiz_id => @quiz.id).empty? %>
       Did not submit <br>
    <% else %>
      <%= stu.results.where(:quiz_id => @quiz.id).first.score %> <br>
    <% end %>

<% end %>


