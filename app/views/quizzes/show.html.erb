        <% end %>
    </ul>
</p> -->

<% @quiz.questions.where(:status => "approved").each do |q| %>
    <%= q.content%> <%#= link_to 'Edit', edit_quiz_question_path(@quiz, q) %>
    <%= link_to 'Edit', edit_quiz_question_path(@quiz, q) %><br>
    <ul>
      <% q.choices.each do |c| %>
        <li><%= c.content %> <%= " - Correct" if c.correct %></li>
      <% end %>
    </ul>
    <% end %>
<span>
<% if can? :update, @quizzes %>
  <a href="<%= new_quiz_question_path(@quiz) %>" class="btn btn-large btn-primary" style="">Add Questions</a>
  <% if @quiz.questions.present? %>
  <a href="<%= review_quiz_questions_path(@quiz) %>" class="btn btn-large btn-primary">Return to Review</a>
  <a href="<%= set_status_quiz_path(@quiz, :status => "finalized") %>" class="btn btn-large btn-primary">Finalize</a>
</span>
  <% end %>
<% end %>
