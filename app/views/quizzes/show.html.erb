<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @quiz.name %>
</p>

<% @quiz.questions.each do |q| %>
    <%= q.content%> <br>
    <ul>
      <% q.choices.each do |c| %> 
        <li><%= c.content %> </li>
      <% end %>
    </ul>
    <% end %>

