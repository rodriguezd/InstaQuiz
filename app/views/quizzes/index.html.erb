<p><%= notice %></p>
<h1>Listing quizzes</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @quizzes.each do |quiz| %>
  <tr>
    <% if can? :update, quiz %>
    <td><%= quiz.name %></td>
    <td><%= link_to 'Show', quiz %> | </td>    
      <td><%= link_to 'Edit', edit_quiz_path(quiz) %> | </td>
      <td><%= link_to 'Delete', quiz, method: :delete, data: { confirm: 'Are you sure?' } %> | </td>

    <td><%= link_to 'Take', take_quiz_path(quiz) %> </td>
    <% end %>
  </tr>
<% end %>
</table>

<br />
<% if can? :create, @quizzes %>
<%= link_to 'New Quiz', new_quiz_path %>
<% end %>
