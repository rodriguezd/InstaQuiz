<%= form_for(@quiz) do |f| %>
  <% if Group.where(:instructor => current_user.id).empty? %>
    A quiz must be assigned to at least one group. You currently have no groups. Create groups by going to MyGroups in the navigation bar.
  <% else %>
  <% if @quiz.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@quiz.errors.count, "error") %> prohibited this quiz from being saved:</h2>

      <ul>
      <% @quiz.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, "Title" %>
    <%= f.text_field :name %>
  </div>

  <div class="inline">
      <%= hidden_field_tag 'clone', nil %>
      <%= check_box_tag 'clone', true, false, :id => "clone_check_box"%>
  </div>
  <p>Clone existing quiz</p>
  <div class="field">
    <%#= label_tag :copy, 'Copy existing quiz? (Select below)' %><br />
    <%= select_tag :copy, options_from_collection_for_select(Quiz.where(:instructor => current_user.id), :id, :name), :prompt => 'Select quiz to clone', :id => "clone_select" %>
  </div>
  <%= label_tag 'num_choices', 'Number of answer choices', :class => "num_choices" %>
  <%= select_tag 'num_choices', "<option>2</option><option>3</option><option selected='selected'>4</option><option>5</option><option>6</option>".html_safe, :class => "num_choices" %>
  <br><br>
  Groups<br><br>
  <table>

  <% Group.where(:instructor => current_user.id).each do |group| %>
    <tr>
      <td><%= label_tag 'group_code[]', group.name %></td>
      <td><%= check_box_tag 'group_code[]', group.code, @quiz.groups.any?{|grp| grp.code == group.code} %></td>
    </tr>
  <% end %>
  </table>
  <br>

  <!-- <div class="field">
    <%#= f.label :deadline %><br />
    <%#= f.datetime_select :deadline %>
  </div> -->

  <p>Date: <input name="deadline_date" type="text" id="datepicker" /></p>
  <br>
  <p>Time: <input name="deadline_time" type="text" id="timepicker" /></p>

    <div class="field">
    <%= f.label :instructions %><br />
    <%= f.text_field :instructions %>
  </div>


  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
<% end %>

