<!DOCTYPE html>
<html>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
<head>
 <div class="navbar navbar-inverse">
    <div class="navbar-inner">
      <div class="container">
        <a class="navbar-brand brand" href="<%= logo_link %>">Insta<span style="color: white">Quiz</span></a>
      <div class="nav-collapse collapse pull-right">
      <% if session[:user_id] != nil %>
        <ul class="nav">
        <li><a href="<%=dashboard_user_path(current_user) %>">Dashboard</a>  </li>
        <li><a href="/users/<%= current_user.id %>/myprofile">My Profile</a> </li>
        <% if current_user.role?(:instructor) %>
          <li><a href="/quizzes/new">Create Quiz</a> </li>
        <% end %>
        <li><a href="#">Settings</a> </li>
        <li><a href="/logout">Logout</a></li>
      <% end %>
    </div>
    </div>
  </div>
  </div>
 </div>
</head>
<body>
  <header>
    <div class="container">
      <% if !!session[:user_id] %>
        Currently logged in as <%= current_user.name %>
      <% end %>
    </div>
  <div class="container">
    <div class="row">
      <div class="span6">
        <div class="logo">
          <h1><span class="color">Quizzes</span></h1>
        </div>
      </div>
      <div class="span6">
        <div class="form">
        </div>
      </div>
    </div>
  </div>
</header>
<div class="container">
  <div class="side-nav todo mrm span2">
            <ul>
              <li class="todo-done">
                <div class="todo-icon fui-user"></div>
                <div class="todo-content">
                  <h4 class="todo-name">
                    <b>Active Quizzes</b>
                  </h4>
                  Description
                </div>
              </li>

              <li>
                <div class="todo-icon fui-list"></div>
                <div class="todo-content">
                  <h4 class="todo-name">
                     <strong>Finalized</strong>
                  </h4>
                  description
                </div>
              </li>

              <li>
                <div class="todo-icon fui-eye"></div>
                <div class="todo-content">
                  <h4 class="todo-name">
                   <strong>Pending</strong>
                  </h4>
                  description
                </div>
              </li>

              <li>
                <div class="todo-icon fui-time"></div>
                <div class="todo-content">
                  <h4 class="todo-name">
                    <strong>Completed</strong>
                  </h4>
                  description
                </div>
              </li>
            </ul>
          </div>
        </div>

<div class="content span10 offset1">
    <div class="container-fluid">
      <div class="container-fluid offset1">
        <%= yield %>
      </div>
    </div>
</div>

</body>
</html>




