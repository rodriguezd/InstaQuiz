<!DOCTYPE html>
<html>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
<head>
 <div class="navbar navbar-inverse">
    <div class="navbar-inner">
      <div class="container">
        <a class="navbar-brand brand" href="<%= logo_link %>">Insta<span style="color: white">Quiz</span></a>
      <div class="nav-collapse collapse pull-right">
      <% if session[:user_id] != nil %>
        <ul class="nav">
        <li><a href="<%=dashboard_user_path(current_user) %>">Dashboard</a>  </li>
        <li><a href="/users/<%= current_user.id %>/myprofile">My Profile</a> </li>
        <% if current_user.role?(:instructor) %>
          <li><a href="/quizzes/new">Create Quiz</a> </li>
        <% end %>
        <li><a href="#">Settings</a> </li>
        <li><a href="/logout">Logout</a></li>
      <% end %>
    </div>
    </div>
  </div>
  </div>
 </div>
</head>
<body>
  <header>
    <div class="container">
    <div class="container-fluid" style="text-align: right">
      <% if !!session[:user_id] %>
        Currently logged in as <%= current_user.name %>
      <% end %>
    </div>
  </div>
  </header>
</br>

  <div class="container">
      <div class="container-fluid">
        <%= yield %>
      </div>
    </div>
  </div>

</body>
</html>




