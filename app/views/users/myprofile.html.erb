<div class="container">  
  <div class="row">  
    <div class="span8">  
      <ul class="nav nav-pills">    
        <li class="<%= 'active' if params[:action] == 'grade' %> "><a href="<%= myprofile_user_path %>">My Profile</a></li>  
        <li class="<%= 'active' if params[:action] == 'chart' %> "><a href="<%= chart_user_path %>">Chart</a></li>   
