        <div id = "pending" class="well quiz-box">
          <h4><a href=/dashboard/pending>Pending Quizzes: <%= pending = current_user.quizzes.where(:student_quizzes => {:quiz_status => "pending"}).count %></h4></a>
        </div>
        <hr>
        <div id = "completed" class="well quiz-box">
        <h4><a href=/dashboard/completed>Completed Quizzes: <%= completed = current_user.quizzes.where(:student_quizzes => {:quiz_status => "completed"}).count %></h4></a>
