
<div id="container" style="width:100%; height:600px;"></div>

<script type="text/javascript" charset-"utf-8">

$(function () {
        $('#container').highcharts({
            chart: {
                type: 'bar'
            },
            title: {
                text: 'Question Choices'
            },

            xAxis: {
                categories: <%= raw @question.choices.collect{|choice| choice.content}%> ,
                title: {
                    text: "Choices"
                }
            },
            yAxis: {
                min: 0,
                max: 100,
                title: {
                    text: 'Answer Popularity (%)',
                    align: 'high'
                },
                labels: {
                    overflow: 'justify'
                }
            },
            tooltip: {
                valueSuffix: ' %'
            },
            plotOptions: {
                bar: {
                    dataLabels: {
                        enabled: true
                    }
                }
            },
            legend: {
                layout: 'vertical',
                align: 'right',
                verticalAlign: 'top',
                x: -100,
                y: 100,
                floating: false,
                borderWidth: 1,
                backgroundColor: '#FFFFFF',
                shadow: true
            },
            credits: {
                enabled: false
            },
            series: [{
 
                name: 'Answer Given',
                data: <%= raw @choice_count %>
            }]
        });
    });
</script>
  <%= link_to 'Back to Quiz', :back %>
